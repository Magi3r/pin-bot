{
  "name": "pin-bot",
  "version": "1.0.0",
  "description": "This bot simply pins messages on discord channels.",
  "main": "bot.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "run-dev": "pnpm ts-node .",
    "run-dist": "cd ./dist && node bot.js",
    "build": "pnpm tsc",
    "copy-files": "cp .env ./dist && cat package.json | sed s/bot.ts/bot.js/ > ./dist/package.json",
    "clean": "rm -rf ./dist"
  },
  "keywords": ["discord.js", "discord", "bot"],
  "author": "Magi3r",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1",
    "ts-command-line-args": "^2.5.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
